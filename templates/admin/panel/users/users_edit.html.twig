{% extends 'admin/base2.html.twig' %}

{% block body %}

	<div class="col-xs-12">

		<!-- PAGE CONTENT BEGINS -->
		<div class="tab-content no-border padding-24">
			<div id="home" class="tab-pane active">
				<div class="row">
					<div class="col-xs-12 col-sm-3 center">
						<span class="profile-picture">
							<img class="editable img-responsive" alt="Alex's Avatar" src="{{ asset('admin/assets/images/avatars/profile-pic.jpg') }}">
						</span>

						<div class="space space-4"></div>

						<a href="#" class="btn btn-sm btn-block btn-primary" disabled>
							<i class="ace-icon fa fa-envelope-o bigger-110"></i>
							<span class="bigger-110">Send a message</span>
						</a>
					</div>
					<!-- /.col -->

					<div class="col-xs-12 col-sm-9">
					
						<h4 class="blue">
							<span class="middle">{{ user.nazwisko }} {{ user.imie }}</span>
						</h4>

              {{ form_start(form) }}
								

						<div class="profile-user-info">
							<div class="profile-info-row">
								<div class="profile-info-name">
									Username
								</div>

								<div class="profile-info-value">
									<span>{{ form_widget(form.username)}}</span>
								</div>
							</div>

							<div class="profile-info-row">
								<div class="profile-info-name">
									Nazwisko
								</div>

								<div class="profile-info-value">
									<span>{{ form_widget(form.nazwisko)}}</span>
								</div>
							</div>

							<div class="profile-info-row">
								<div class="profile-info-name">
									Imię
								</div>

								<div class="profile-info-value">
									<span>{{ form_widget(form.imie)}}</span>
								</div>
							</div>

							<div class="profile-info-row">
								<div class="profile-info-name">
									EP Producenta
								</div>

								<div class="profile-info-value">
									<span>{{ form_widget(form.ep)}}</span>
								</div>
							</div>

							<div class="profile-info-row">
								<div class="profile-info-name">
									Znak sprawy
								</div>

								<div class="profile-info-value">
									<span>{{ form_widget(form.znaksprawy)}}</span>
								</div>
							</div>

							<div class="profile-info-row">
								<div class="profile-info-name">
									Data utworzenia
								</div>

								<div class="profile-info-value">
									<span>{{ user.dataUtworzenia | date("Y-m-d") }}</span>
								</div>
							</div>

							<div class="profile-info-row">
								<div class="profile-info-name">
									Data aktualizacji
								</div>

								<div class="profile-info-value">
									<span>{{ user.dataAktualizacji | date("Y-m-d") }}</span>
								</div>
							</div>

							<div class="profile-info-row">
								<div class="profile-info-name">
									Termin ważności konta
								</div>

								<div class="profile-info-value">
									<span>{{ user.dataTermin | terminKonta }}</span>
								</div>
							</div>


							<div class="profile-info-row">
								<div class="profile-info-name">
									email
								</div>

								<div class="profile-info-value">
									<a href="#" >{{ form_widget(form.email)}}</a>
								</div>
							</div>

							<div class="profile-info-row">
								<div class="profile-info-name">
									Role
								</div>

								<div class="profile-info-value">
									<a href="#" >{{ form_widget(form.roles)}}</a>
								</div>
							</div>

							<div class="profile-info-row">
								<div class="profile-info-name">	
								{{ form_widget(form.submit)}}
								</div>

								<div class="profile-info-value">
									<button class="btn btn-danger btn-sm bigger-150" onclick="window.location='{{ url('admin_users') }}'">
										<i class="ace-icon fa fa-reply icon-only"></i>
									</button>
								</div>
							</div>
							{{ form_end(form) }}

						</div>

					</div>
					<!-- /.col -->
				</div>
				<!-- /.row -->

				<div class="space-20"></div>

			</div>
			<!-- /#home -->

		</div>


	</div>


{% endblock %}

